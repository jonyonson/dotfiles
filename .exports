#  ~/.exports
#==========================================

export EDITOR="vim"
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
export MANPAGER="less -s -M +Gg" # https://goo.gl/ja41XS
export LESS="-F -i -J -M -R -W -x4 -X -z-4" # https://goo.gl/3ckgeg

# https://goo.gl/wD9v2g
export LESS_TERMCAP_mb=$'\E[1;31m'     # begin bold
export LESS_TERMCAP_md=$'\E[1;36m'     # begin blink
export LESS_TERMCAP_me=$'\E[0m'        # reset bold/blink
export LESS_TERMCAP_se=$'\E[0m'        # reset reverse video
export LESS_TERMCAP_so=$'\E[01;44;33m' # begin reverse video
export LESS_TERMCAP_us=$'\E[1;32m'     # begin underline
export LESS_TERMCAP_ue=$'\E[0m'        # reset underline

export JDK8=/Library/Java/JavaVirtualMachines/jdk1.8.0_221.jdk/Contents/Home
export JDK11=/Library/Java/JavaVirtualMachines/openjdk-11.0.2.jdk/Contents/Home
export JAVA_VERSION=$JDK11
export JAVA_HOME=$JAVA_VERSION

# PATH SETUP
PATH=$HOME/.bin:$PATH
PATH="$HOME/Library/Python/3.7/bin:$PATH"
PATH="/usr/local/opt/python/libexec/bin:$PATH" # Python 3
export PATH
