tap "caskroom/cask"
tap "caskroom/fonts"
tap "caskroom/versions"
tap "homebrew/bundle"
tap "homebrew/core"
tap "homebrew/versions"

# homebrew installed packages
# =================================
brew "bash"
brew "bash-completion@2"
brew "bash-git-prompt"
brew "coreutils"
brew "diff-so-fancy"
brew "emojify"
brew "findutils", args: ["with-default-names"]
brew "fish"
brew "flow"
brew "git"
brew "gnu-sed", args: ["with-default-names"]
brew "hugo"
brew "lastpass-cli", args: ["--with-pinentry --with-doc"]
brew "micro"
brew "mas"  # install apps from the App Store | mas install <app>
brew "python2"
brew "python3"
brew "the_silver_searcher" # http://geoff.greer.fm/ag usage: ag
brew "tree"
brew "vim", args: ["with-override-system-vi", "with-python3"]
brew "watchman"
brew "wget"
brew "yarn", args: ["without-node"]
brew "youtube-dl"

# https://github.com/vvo/gifify | npm install -g gifify
# ======================================================
brew "ffmpeg", args: ["--with-libass --with-fontconfig"]
brew "imagemagick", args: ["--with-fontconfig"]
brew "giflossy"

