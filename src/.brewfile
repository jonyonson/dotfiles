# https://github.com/Homebrew/homebrew-bundle
# This file must be saved as ~/Brewfile in order to run brew bundle


tap "caskroom/cask"
tap "caskroom/fonts"
tap "caskroom/versions"
tap "homebrew/bundle"
tap "homebrew/core"


# Homebrew installed packages
# =================================
brew "bash"
brew "bash-completion@2"
brew "bash-git-prompt"
brew "coreutils"
brew "diff-so-fancy"
brew "findutils", args: ["with-default-names"]
brew "fish"
brew "flow"
brew "git"
brew "gnu-sed", args: ["with-default-names"]
brew "lastpass-cli", args: ["--with-pinentry --with-doc"]
brew "mas" # [^b]
brew "python2"
brew "python3"
brew "the_silver_searcher" #[^a]
brew "ssh-copy-id"
brew "tree"
brew "vim", args: ["with-override-system-vi", "with-python3"]
brew "watchman"
brew "wget"
brew "yarn", args: ["without-node"]
brew "youtube-dl"
brew "ffmpeg", args: ["--with-libass --with-fontconfig"] # [c^]
brew "imagemagick", args: ["--with-fontconfig"] # [c^]
brew "giflossy" # [c^]


# brew-cask installed Applications
# =================================
cask_args appdir: "/Applications"
cask "adobe-acrobat-reader"
cask "alfred"
cask "chrome-devtools"
cask "dash"
cask "dropbox"
cask "firefox"
cask "google-chrome"
cask "google-chrome-canary"
cask "hyper"
cask "intellij-idea"
cask "iterm2"
cask "kindle"
cask "macvim"
cask "now"
cask "pycharm-ce"
cask "slack"
cask "spotify"
cask "sublime-text"
cask "vlc"
cask "visual-studio-code"


# brew-cask installed Fonts
# =================================
cask "font-inconsolata-for-powerline"
cask "font-menlo-for-powerline"
cask "font-source-code-pro"
cask "font-fira-code"


# macOS App Store Apps
# =================================
mas "Dashlane", id: 552383089
mas "LastPass", id: 926036361
mas "Todoist", id: 585829637
mas "Twitter", id: 409789998
mas "Xcode", id: 497799835
mas "Spark", id: 1176895641


