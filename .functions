# ~/.functions for macOS and Ubuntu
# =================================

function serve() {
  PORT=${1:-8000}
  http-server -c-1 -o -p "$PORT"
}

# Create a new directory and enter it
function md() {
  mkdir -p "$@" && cd "$@"
}

# Get local IP address
function myip() {
  ifconfig | \
    sed -En 's/127.0.0.1//;s/.*inet (addr:)?(([0-9]*\.){3}[0-9]*).*/\2/p'
}


# find shorthand
function f() {
  find . -name "$1" 2>&1 | grep -v 'Permission denied'
}
